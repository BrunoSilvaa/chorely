model Group {
    id Int @id @default(autoincrement())
    name String @db.VarChar(100)
    picture String?
    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")
    deletedAt DateTime? @map("deleted_at")

    admins User[] @relation("AdminsGroup")
    members User[] @relation("MembersGroup")

    createdById Int @map("created_by_id")
    createdBy User @relation("CreatedGroups", fields: [createdById], references: [id])

    updatedById Int @map("updated_by_id")
    updatedBy User @relation("UpdatedGroups", fields: [updatedById], references: [id])

    tasks Task[] @relation("TaskGroup")

    categories Category[] @relation("GroupsCategory")

    @@map("groups")
}