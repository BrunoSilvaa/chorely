model User {
    id Int @id @default(autoincrement())
    name String @db.VarChar(100)
    email String @unique @db.VarChar(100)
    password String
    picture String?
    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")
    deletedAt DateTime? @map("deleted_at")

    //Group relations
    adminsOfGroups Group[] @relation("AdminsGroup")
    membersOfGroups Group[] @relation("MembersGroup")
    createdGroups Group[] @relation("CreatedGroups")
    updatedGroups Group[] @relation("UpdatedGroups")

    //Task relations
    createdTasks Task[] @relation("CreatedTasks")
    updatedTasks Task[] @relation("UpdatedTasks")
    tasksAssignedTo Task[] @relation("TasksAssignedTo")

    @@map("users")
}